!!! Fonts
xterm*font: -*-terminus-*-*-*-*-*-*-*-*-*-*-iso10646-*
xterm*boldFont: -*-terminus-*-*-*-*-*-*-*-*-*-*-iso10646-*
xterm*italicFont: -*-terminus-*-*-*-*-*-*-*-*-*-*-iso10646-*



! VT Font Menu: Unreadable
xterm*faceSize1: 8
! VT font menu: Tiny
xterm*faceSize2: 10
! VT font menu: Medium
xterm*faceSize3: 12
! VT font menu: Large
xterm*faceSize4: 16
! VT font menu: Huge
xterm*faceSize5: 22

xterm*VT100.Translations: #override \
    Ctrl <Key> minus: smaller-vt-font() \n\
    Ctrl <Key> plus: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d)



! Only select text
xterm*highlightSelection: true
! Remove trailing spaces
! font settings --------------------------------------------------------------

Xft.autohint: true
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
!Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault


xterm*trimSelection: true

! Lines of output that you can scroll back over
xterm*saveLines: 4096
! Turn the scrollbar on, and put it on the right
xterm*scrollBar: true
xterm*rightScrollBar: true

! Do not scroll when there is new input e.g. tail -f /var/syslog
xterm*scrollTtyOutput: false

! special
xterm*.foreground:   #e0f2ec
xterm*.background:   #11292e
xterm*.cursorColor:  #e0f2ec

! black
xterm*.color0:       #0e1f22
xterm*.color8:       #1c4b4e

! red
xterm*.color1:       #a85659
xterm*.color9:       #eb8995

! green
xterm*.color2:       #668e8c
xterm*.color10:      #82aea9

! yellow
xterm*.color3:       #c3b6a4
xterm*.color11:      #e1d9ce

! blue
xterm*.color4:       #326d78
xterm*.color12:      #a7d2cd

! magenta (or orange)
xterm*.color5:       #433c32
xterm*.color13:      #aa9576

! cyan
xterm*.color6:       #386e74
xterm*.color14:      #90c0bd

! white
xterm*.color7:       #e0f2ec
xterm*.color15:      #f0f8f3













! urxvt -------------------------------------------

URxvt.font: xft:SourceCodePro:size=10 :antialias=true:autohint=false
URxvt.boldFont: xft:SourceCodePro:Bold:size=10 :antialias=true:autohint=false

! Add fallback fonts as laid out in `man 1 urxvt` under "font:" in the RESOURCES section

! Window size and position
!URxvt*geometry: 60x22+50+100
! Window size, let the Window Manager position it
URxvt.geometry: 80x28

URxvt.scrollBar: false

! scrollback buffer lines - 65535 is max (64 is default)
URxvt.saveLines:8192
URxvt.scaleHeight: 0.9
URxvt.letterSpace: -1

! Clickble URLs
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 3



