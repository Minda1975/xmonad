-- vim: ft=haskell
Config { font = "xft:xos4 ProggyCleanTT:pixelsize=11:antialias=true:hinting=true"
       , bgColor = "black" --"#1d1f21" --"#1c1c1c"
       , fgColor = "white"
       , position = Bottom
       --, position = TopSize C 100 35 -- use this if only using one monitor
       --, position = Static { xpos = 0 , ypos = 0, width = 1920, height = 24 } --manually position bar to display on left monitor 
       , lowerOnStart = False
       , allDesktops = True
       , overrideRedirect = False
       , border = BottomBM 0
       , borderColor = "black"
       , commands = [ Run Cpu
                              ["-L","3","-H","50","--normal","#00FF00","--high","#FF0000"] 10 
                             
        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#FFFFFF"
                             , "--normal"   , "#00FF00"
                             , "--high"     , "#FF0000"
                             ] 10
                             
        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "± <core0>°±<core1>°"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#FFFFFF"
                             , "--normal"   , "#00FF00"
                             , "--high"     , "#FF0000"
                             ] 50
                          
        -- Disks Args RefreshRate 
        , Run DiskIO [("/", "<read> <write>"), ("sdb1", "<total>")] [] 10    
               
           
        -- volume indicator                    
        , Run Com "/home/mindaugas/.scripts/volume.sh" [] "myvolume" 10 
        
         -- music indicator                    
        , Run Com "/home/mindaugas/.scripts/music" [] "mymusic" 10
        
         -- keyboard layout indicator
        , Run Kbd            [ ("us(dvorak)" , "<fc=#FFFFFF>DV</fc>")
                             , ("us"         , "<fc=#FFFFFF>US</fc>")
                             ]                
                           
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ <fc=#2828FF>%mymusic%</fc> | <fc=#AA00FF>%dynnetwork%</fc> <fc=#FF3CFF> <fc=#00FF00>%myvolume%</fc>  <fc=#FF3CFF> </fc><fc=#FF00FF>%cpu%</fc> <fc=#E77471>%coretemp%</fc> <fc=#F433FF>%diskio%</fc> <fc=#F433FF> </fc><fc=#3DFF33>%date%</fc> %kbd%</fc> "
       }
