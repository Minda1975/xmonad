-- vim: ft=haskell
Config { font = "xft:Input Mono Compressed NF:size=9:medium:antialias=true"
       , bgColor = "#FFFFFF" 
       , fgColor = "#000000"
       , position = Top
       --, position = TopSize C 100 35 -- use this if only using one monitor
       --, position = Static { xpos = 0 , ypos = 0, width = 1920, height = 24 } --manually position bar to display on left monitor 
       , lowerOnStart = False
       , allDesktops = True
       , overrideRedirect = False
       , border = NoBorder
       , borderColor = "black"
       , commands = [ Run Cpu
                              ["-L","3","-H","50","--normal","#000000","--high","#FF0000"] 10 
                             
        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#000000"
                             , "--normal"   , "#008000"
                             , "--high"     , "#FF0000"
                             ] 10
                             
        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "± <core0>°±<core1>°"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#000000"
                             , "--normal"   , "#008000"
                             , "--high"     , "#FF0000"
                             ] 50
                          
          
             
           
        -- volume indicator                    
        , Run Com "/home/mindaugas/.scripts/volume.sh" [] "myvolume" 10 
        
                 
        -- cmus indicator                    
        , Run Com "/home/mindaugas/.scripts/xsetcmus.sh" [] "myxsetcmus" 10
        
         -- keyboard layout indicator
        , Run Kbd            [ ("us(dvorak)" , "<fc=#493D26>DV</fc>")
                             , ("us"         , "<fc=#493D26>US</fc>")
                             ]                
                           
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ <fc=#2F796C>%myxsetcmus%</fc>  <fc=#26334A>%dynnetwork%</fc> <fc=#26334A> <fc=#26334A>%myvolume%</fc>  <fc=#26334A> </fc><fc=#26334A>%cpu%</fc> <fc=#26334A>%coretemp%</fc>  <fc=#493D26> </fc><fc=#0D47CE>%date%</fc> %kbd%</fc> "
       }
