-- vim: ft=haskell
Config { font = "xft:sans:pixelsize=11:antialias=true:hinting=true"
       , bgColor = "#002b36" --"#1d1f21" --"#1c1c1c"
       , fgColor = "#657b83"
       , position = Top
       --, position = TopSize C 100 35 -- use this if only using one monitor
       --, position = Static { xpos = 0 , ypos = 0, width = 1920, height = 24 } --manually position bar to display on left monitor 
       , lowerOnStart = False
       , allDesktops = True
       , overrideRedirect = False
       , border = NoBorder
       , borderColor = "black"
       , commands = [ Run Cpu
                              ["-L","3","-H","50","--normal","#657b83","--high","#657b83"] 10 
                             
        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "<dev>: <tx>kB/s|<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "#657b83"
                             , "--normal"   , "#657b83"
                             , "--high"     , "#657b83"
                             ] 10
                             
        -- cpu core temperature monitor
        , Run CoreTemp       [ "--template" , "± <core0>°±<core1>°"
                             , "--Low"      , "70"        -- units: °C
                             , "--High"     , "80"        -- units: °C
                             , "--low"      , "#657b83"
                             , "--normal"   , "#657b83"
                             , "--high"     , "#657b83"
                             ] 50
                          
          
             
           
        -- volume indicator                    
        , Run Com "/home/mindaugas/.scripts/volume.sh" [] "myvolume" 10 
        
                 
        -- cmus indicator                    
        , Run Com "/home/mindaugas/.scripts/xsetcmus.sh" [] "myxsetcmus" 10
        
         -- keyboard layout indicator
        , Run Kbd            [ ("us(dvorak)" , "<fc=#93a1a1>DV</fc>")
                             , ("us"         , "<fc=#93a1a1>US</fc>")
                             ]                
                           
                    , Run Date "%a %m/%d %H:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ <fc=#93a1a1>%myxsetcmus%</fc>  <fc=#93a1a1>%dynnetwork%</fc> <fc=#93a1a1> <fc=#93a1a1>%myvolume%</fc>  <fc=#93a1a1> </fc><fc=#93a1a1>%cpu%</fc> <fc=#93a1a1>%coretemp%</fc>  <fc=#93a1a1> </fc><fc=#93a1a1>%date%</fc> %kbd%</fc> "
       }
